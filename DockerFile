FROM node:20-alpine

# Set the working directory
WORKDIR /usr/src/app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the source code
COPY src .

# Build the TypeScript project
RUN npm run build

# Expose the port
EXPOSE 3000

# Start the app
CMD ["node", "dist/server.js"]