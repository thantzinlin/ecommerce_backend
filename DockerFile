# Use the correct Node.js image
FROM node:20-alpine

# Set the working directory in the container
WORKDIR /app

# Copy package.json and package-lock.json first for better caching
COPY package.json package-lock.json ./

# Install dependencies (including devDependencies like TypeScript)
RUN npm install

# Copy all files into the container
COPY . .

# Build the TypeScript application
RUN npm run build

# Debug: List all files and folders in the project to ensure everything is copied
RUN ls -R

# Debug: Verify if the dist folder is created
RUN ls -R dist || echo "dist folder not found!"

# Expose the port your application will run on
EXPOSE 3000

# Start the application
CMD ["npm", "start"]
